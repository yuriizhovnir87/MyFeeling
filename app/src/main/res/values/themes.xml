<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyFeeling" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/surface_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorSecondary">@color/background_secondary</item>
        <item name="colorPrimaryVariant">@color/background_brand_primary</item>
        <item name="colorOnSecondary">@color/background_brand_secondary</item>
        <item name="colorOnTertiary">@color/background_brand_tertiary</item>
        <item name="text_color">@color/text_icon_primary</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="CustomCalendarDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_icon_primary</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/surface_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/PersistenceBottomSheetDialog</item>
    </style>

    <style name="PersistenceBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">13dp</item>
    </style>

    <style name="ColorSwitchStyleProject">
        <item name="colorControlActivated">@color/base_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/text_icon_brand</item>
        <item name="android:textColor">@color/text_icon_primary</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlackSwitchStyle">
        <item name="colorControlActivated">@color/base_black</item>
        <item name="android:textColor">@color/text_icon_primary</item>
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.MyFeeling">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColorPrimary">@color/text_icon_primary</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">
            ?attr/buttonHighlightColor
        </item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="Theme.MyFeeling">
        <item name="colorPrimary">@color/background_primary</item>
        <item name="colorSecondary">@color/background_secondary</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


